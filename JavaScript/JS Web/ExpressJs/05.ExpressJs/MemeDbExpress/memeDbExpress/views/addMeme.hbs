<h1>Add New Meme</h1>
<div class="container">
    <form action="/addMeme" enctype="multipart/form-data" method="POST">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="The title of the Meme">

        <select name="genreSelect" id="genreSelect">
            {{#each genres}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>

        <label for="meme">Poster URL</label>
        <input type="file" id="meme" name="meme" placeholder="Link to a poster">

        <label for="description">Movie description</label>
        <textarea id="description" name="description" placeholder="Meme description" rows="10" cols="10"></textarea>

        <input type="submit" value="Submit">
    </form>
</div>